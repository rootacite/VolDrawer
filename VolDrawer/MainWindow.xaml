<Window x:Class="VolDrawer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VolDrawer"
        xmlns:a="clr-namespace:ShinenginePlus;assembly=ShinenginePlus"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Loaded="MainWindow_OnLoaded">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas Height="1080" Width="1920">
                <a:Direct2DImage x:Name="Plane" Height="1080" Width="1920" Canvas.Top="0" Canvas.Left="0" Stretch="Fill"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
